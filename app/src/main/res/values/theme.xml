<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Solarized" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sol_base2</item>
        <item name="colorPrimaryDark">@color/sol_base1</item>
        <item name="colorAccent">@color/sol_blue</item>

        <item name="android:windowBackground">@color/sol_base3</item>
        <item name="android:colorBackground">@color/sol_base3</item>
        <item name="android:textColor">@color/sol_base00</item>
        <item name="android:textColorSecondary">@color/sol_base01</item>

        <item name="android:textViewStyle">@style/Solarized.TextView.Light</item>
        <item name="android:editTextStyle">@style/Solarized.EditText.Light</item>
        <item name="android:buttonStyle">@style/Solarized.Button.Light</item>
        <item name="android:checkboxStyle">@style/Solarized.CheckBox.Light</item>
    </style>

    <style name="Solarized.TextView.Light" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/sol_base00</item>
    </style>

    <style name="Solarized.EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/sol_base00</item>
        <item name="android:textColorHint">@color/sol_base01</item>
        <item name="android:backgroundTint">@color/sol_base1</item>
    </style>

    <style name="Solarized.Button.Light" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/sol_base3</item>
        <item name="android:backgroundTint">@color/sol_blue</item>
    </style>

    <style name="Solarized.CheckBox.Light" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/sol_base00</item>
        <item name="buttonTint">@color/sol_cyan</item>
    </style>

</resources>